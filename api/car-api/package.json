    "@opentelemetry/instrumentation-grpc": "^0.38.0",
    "@opentelemetry/instrumentation-mongoose": "^0.32.1",
    "@opentelemetry/instrumentation-winston": "^0.31.1",
    "@opentelemetry/resources": "^1.12.0",
